

body, html {
  height: 100%;
}

body {
  background: lighten(teal, 70%);
  /*background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 59%, rgba(0, 0, 0, 0.65) 100%) no-repeat;*/
  background-position: fixed;
  /*height: 494px;*/
  /*width: 620px;*/
  font-size: 20px;
}

body > .section {
  background: lighten(teal, 70%);
}

pre {
  /*width: 100%;*/
  margin-left: 0;
  overflow-x: scroll;
  // word-wrap: none;
}


.link {
  display: inline-block;
  font-family: monospace;
  border: 1px solid black;
  border-radius: 20px;
  background: darken(white, 10%);
  padding: 15px;
  margin-bottom: 10px;
  transition: background .5s ease-in;
  /*transition: .5s box-shadow ease-in;*/
  /*transition: 1s outline ease-in;*/
  box-shadow: none !important;
}

.link:hover {
  /*box-shadow: 0px 0px 5px white !important;*/
  background: darken(white, 20%);
} 

.section {
  border: 1px solid darken(white, 20%);
  padding: 15px;
}

.minisection {
  border: 1px solid lighten(red, 30%);
  padding: 10px;
  display: inline-block;
  margin-bottom: 10px;
  border-radius: 10px;
}

.page-container {
  height: 100% !important;
  width: 80% !important;
  margin: 0 auto !important;
  border: 1px solid black;
}

.subsection {
  border: 1px solid darken(white, 20%);
  padding: 15px;
  margin: -10px 0;
}

.section, .subsection, .minisection {
  background: rgba(0, 0, 0, 0.1);
}

p {
  margin: 0;
}

.intro {
  text-align: center;
}



.business-cards-background {
  background-image: url("<%= image_url("new_year_background.png") %>") !important;
  display: inline-block;
}

.business-cards-content {
  background-color: none !important;
  padding: 5px 20px 0 5px;  
  border: 1px solid black;
  font-size: 12px;
  font-weight: bold;
  display: inline-block;
  font-family: serif;
  overflow-x: hidden;
  background: rgba(255, 255, 255, .3);
}

.icon-link, .link {
  display: inline-block;
  /*border: 1px solid black;*/
  padding: 10px;
  /*width: 25px;*/
  font-size: 12px;
  font-family: monospace;
  /*height: 25px;*/
  img {
    width: 15px;
    height: 15px;
  }
  box-shadow: 0 0 5px black;
  transition: .2s outline ease-in;
}
.icon-link:hover{
    outline: 2px solid white;
}